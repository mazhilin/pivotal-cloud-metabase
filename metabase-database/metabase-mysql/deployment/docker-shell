 docker run -itd  --network=mysql-cluster  --ip=172.19.0.7 -p 3307:3306 --restart always  --privileged=true --name mysql-cluster-master-server --network-alias mysql-cluster-master-server --hostname mysql-cluster-master-server -v /docker/mysql/cluster/master/conf/my.cnf:/etc/mysql/my.cnf -v /docker/mysql/cluster/master/conf/conf.d/:/etc/mysql/conf/conf.d/ -v /docker/mysql/cluster/master/data:/var/lib/mysql -v /docker/mysql/cluster/master/logs:/var/logs/mysql -e "JAVA_OPTS=-server -Xms512m -Xmx512m -Xmn256m -Duser.home=/opt -XX:MetaspaceSize=128m -XX:MaxMetaspaceSize=320m -XX:+AlwaysPreTouch -XX:-UseBiasedLocking" -e TZ="Asia/Shanghai" -e MYSQL_ROOT_PASSWORD=1234560@Abc  mysql:latest --lower_case_table_names=1 --character-set-server=utf8mb4 --collation-server=utf8mb4_unicode_ci --server-id=1


